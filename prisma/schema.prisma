generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL") // Uses connection pooling
  directUrl = env("PRISMA_DATABASE_URL") // Uses direct connection
}
// --- AUTH MODELS ---
model SiteConfig {
  id             String @id @default("config") // We only ever have one row with ID "config"
  youtubeVideoId String @default("74ru5kxciXw")
}
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?
  role          String    @default("USER") // "ADMIN", "CONTENT_CREATOR", "USER"
  image         String?
  createdAt     DateTime  @default(now())
  
  // Relations
  comments      Comment[]
  topics        ForumTopic[]
  posts         ForumPost[]
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime
  
  @@unique([email, token])
}

// --- CONTENT MODELS ---

model Download {
  id          String    @id @default(cuid())
  title       String
  description String
  fileUrl     String
  category    String
  version     String    @default("1.0")
  downloads   Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now())
  comments    Comment[]
}

// --- ANALYTICS ---
model DailyAnalytics {
  id        String   @id @default(cuid())
  date      DateTime @unique // Stored as YYYY-MM-DD 00:00:00
  views     Int      @default(0)
}

model Article {
  id          String    @id @default(cuid())
  title       String
  content     String
  category    String
  isPremium   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  comments    Comment[] 
}

model Comment {
  id         String   @id @default(cuid())
  content    String
  createdAt  DateTime @default(now())
  
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  downloadId String?
  download   Download? @relation(fields: [downloadId], references: [id], onDelete: Cascade)

  articleId  String?
  article    Article?  @relation(fields: [articleId], references: [id], onDelete: Cascade)
}

// --- COMMUNITY MODELS ---

model Feedback {
  id        String   @id @default(cuid())
  name      String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model NewsletterSubscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

// --- FORUM MODELS ---

model ForumCategory {
  id          String       @id @default(cuid())
  title       String
  description String?
  slug        String       @unique
  order       Int          @default(0)
  topics      ForumTopic[]
}

model ForumTopic {
  id          String        @id @default(cuid())
  title       String
  content     String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  isPinned    Boolean       @default(false)
  isLocked    Boolean       @default(false)
  
  categoryId  String
  category    ForumCategory @relation(fields: [categoryId], references: [id])
  
  userId      String
  user        User          @relation(fields: [userId], references: [id])
  
  posts       ForumPost[]
}

model ForumPost {
  id          String     @id @default(cuid())
  content     String
  createdAt   DateTime   @default(now())
  
  topicId     String
  topic       ForumTopic @relation(fields: [topicId], references: [id], onDelete: Cascade)
  
  userId      String
  user        User       @relation(fields: [userId], references: [id])
}